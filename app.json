{
  "expo": {
    "name": "hms_3do",
    "slug": "hms_3do",
    "scheme": "hmsapp",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "permissions": [
      "MOTION"
    ],
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "custom photos permission",
          "cameraPermission": "Allow HSM to open the camera",
          "microphonePermission": false
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.1005255181896-s070api6cavp9uhgjvblusmbs1hpms8u"
        }
      ],
      "expo-video",
      "expo-font",
      "expo-web-browser",
      "expo-file-system\\"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hms3do.app",
      "infoPlist": {
        "NSMotionUsageDescription": "This app uses the pedometer to count your steps.",
        "NSHealthShareUsageDescription": "The app needs access to Health to read step data.",
        "NSHealthUpdateUsageDescription": "The app needs permission to write data to Health.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.hms3do.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "7cee2fa1-bc62-4c22-9f76-12fe0d0b04d5"
      }
    },
    "owner": "letankim2003"
  }
}
